{
  "name": "Chrome Bingo Creater",
  "description": "Create a bingo card for runescape",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
       "service_worker": "background.js"
  },
  "action": {
      "default_title": "Open the bingo maker"
  },
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_scripts":[
    {
      "matches":["*://*.runescape.wiki/w/*"],
      "js":["content.js"]
    }
  ]
}